{
	"private": true,
	"scripts": {
		"build": "parcel build source/manifest.json --no-content-hash --no-source-maps --dist-dir distribution --no-cache --detailed-report 0",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint source/**/*.css",
		"lint:js": "xo",
		"test": "run-p lint:* build",
		"watch": "parcel watch source/manifest.json --dist-dir distribution --no-cache --no-hmr"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser"
		],
		"global": [
			"chrome"
		],
		"rules": {
			"no-unused-vars": [
				"error",
				{
					"varsIgnorePattern": "browser"
				}
			],
			"object-curly-spacing": 0,
			"quotes": 0,
			"unicorn/prefer-query-selector": 0,
			"prefer-arrow-callback": 0
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"no-empty-source": null
		}
	},
	"dependencies": {
		"webext-options-sync": "^3.0.0",
		"webextension-polyfill": "^0.8.0"
	},
	"devDependencies": {
		"@parcel/core": "^2.0.0",
		"@parcel/config-webextension": "^2.0.0",
		"@parcel/transformer-image": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.0.0",
		"stylelint": "^14.0.0",
		"stylelint-config-xo": "^0.20.0",
		"xo": "^0.45.0"
	},
	"webExt": {
		"sourceDir": "distribution"
	}
}
